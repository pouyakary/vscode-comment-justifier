{
    "parser":      "@typescript-eslint/parser",
    "root":        true,
    "parserOptions": {
        "ecmaVersion":     6,
        "sourceType":      "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention":    "warn",
        "@typescript-eslint/semi":                 "warn",
        "curly":                                   "warn",
        "eqeqeq":                                  "warn",
        "no-throw-literal":                        "warn",
        "semi":                                    "off"
    },
    "ignorePatterns": [
        "**/*.d.ts"
    ]
}